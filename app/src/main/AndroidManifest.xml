<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.originalcontentsoftware.lfb"
          android:versionCode="93"
          android:versionName="0.8.0" >

  <uses-sdk android:minSdkVersion="8"
            android:targetSdkVersion="15" />

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.INTERNET" />

  <application android:allowBackup="false"
               android:icon="@drawable/ic_launcher"
               android:label="@string/app_name" >

    <meta-data android:name="com.bugsnag.android.API_KEY"
               android:value="@string/bugsnag_api_key" />

    <activity android:name=".LFB"
              android:configChanges="keyboardHidden|orientation|screenSize"
              android:label="@string/title_activity_main"
              android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />

    <activity android:name=".SelectMazeActivity"
              android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />

    <activity android:name=".QuestionActivity"
              android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />

    <activity android:name=".MakeMazeActivity"
              android:theme="@android:style/Theme.NoTitleBar"
              android:windowSoftInputMode="adjustResize" />

    <activity android:name=".AddQuestionsActivity"
              android:theme="@android:style/Theme.NoTitleBar"
              android:windowSoftInputMode="adjustResize" />

    <activity android:name=".MainMenuActivity"
              android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >

      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>

      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:host="*"
              android:mimeType="*/*"
              android:pathPattern=".*\\.ocsmaze"
              android:scheme="file" />
      </intent-filter>

      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:host="*"
              android:mimeType="*/*"
              android:pathPattern=".*\\.ocsmaze"
              android:scheme="http" />
      </intent-filter>

      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:host="*"
              android:mimeType="*/*"
              android:pathPattern=".*\\.ocsmaze"
              android:scheme="https" />
      </intent-filter>

      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:host="*"
              android:mimeType="*/*"
              android:pathPattern=".*\\.ocsmaze"
              android:scheme="content" />
      </intent-filter>

      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.BROWSABLE" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:mimeType="application/octet-stream"
              android:pathPattern=".*\\.ocsmaze"
              android:scheme="file" />
        <data android:mimeType="application/octet-stream"
              android:pathPattern=".*\\.ocsmaze"
              android:scheme="content" />
      </intent-filter>
    </activity>

    <activity android:name=".MyMazeMenu"
              android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
  </application>
</manifest>
